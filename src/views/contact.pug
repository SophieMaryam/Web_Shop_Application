doctype
html
	head
		title Contact Us
		link(rel="stylesheet" href="main.css" type="text/css")
		link(href="https://fonts.googleapis.com/css?family=Raleway" rel="stylesheet")
	body
		div#contactpageimg 
			div#content
				ul 
					li 
						a(href="/login") Login
					li 
						a(href="/register") Register
		h1#contacttitle Contact us
		
		div#allcontacts
			div#othercontact
				h3#contactnumber Customer Service Phone Number & Address 
					span#plus +
				p#details +3163733638
				p#details Koton Street 17, 4431 


			div#Email
				h1#contactemail Email Us
				form#emailform(action="/email" method="post" name="form")
					label To: 
					input(name="to" type="text", placeholder="example@gmail.com")
					label From: 
					input(name="from" type="text", placeholder="example@gmail.com")
					label Subject
					input(name="subject" type="text", placeholder="Subject")
					label Content
					input(name="content" type="text" placeholder="Text..." rows="100", columns="100")
					label For verification, please insert your email's password. 
					input(name="password" type="password" placeholder="Email password") 
					button(type="submit") Submit


		script(type="text/javascript" src="https://code.jquery.com/jquery-3.2.1.min.js")
		script.
			$(document).ready(() => {
				$('#contactnumber').click(function(){
					$('#details').slideToggle("slow", function(){});
				});    

				$('#contactemail').click(function(){
					$('#emailform').slideToggle("slow", function(){});
				});


				$('#contactnumber').click(() => {
				var some = $('#plus').text()
				
				if(some ==='+'){
					$('#plus').text("-");
					console.log(some)

				}

				else{
					$('#plus').html("+");
				}
				});

				//- $('#contactnumber').click(() => {
				//- 	$('#plus').html("<span> + </span>");
				//- });


			})

