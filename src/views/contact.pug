		script(type="text/javascript" src="https://code.jquery.com/jquery-3.2.1.min.js")
		script.
			$(document).ready(() => {
				$('#contactnumber').click(function(){
					$('#details').slideToggle("slow", function(){});
				});  

				$('#contactaddress').click(function(){
					$('#address').slideToggle("slow", function(){});
				});  

				$('#contactemail').click(function(){
					$('#emailform').slideToggle("slow", function(){});
				});


				$('#contactnumber').click(() => {
				var plus = $('#plus').text()
				
				if(plus ==='+'){
					$('#plus').text("-");
				}

				else{
					$('#plus').html("+");
				}
				});

				$('#contactaddress').click(() => {
					var plus1 = $('#plus1').text()
				
					if(plus1 ==='+'){
						$('#plus1').text("-");
				}

				else{
					$('#plus1').html("+");
				}
				});

				$('#contactemail').click(() => {
					var plus2 = $('#plus2').text()
				
					if(plus2 ==='+'){
						$('#plus2').text("-");
				}

				else{
					$('#plus2').html("+");
				}
				});

				$('#contactsubmit ').hover(() => {
					$('#contactsubmit ').css("background-color", "#262626")
				});

				$('#contactsubmit ').mouseleave(() => {
					$('#contactsubmit').css("background-color", "black")
				})
			});

