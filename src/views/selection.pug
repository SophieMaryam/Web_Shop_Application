doctype
html
	head
		title Ucci Collection
		link(rel="stylesheet" href="main.css" type="text/css")
		link(href="https://fonts.googleapis.com/css?family=Raleway" rel="stylesheet")
		link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.99.0/css/materialize.min.css")
		meta(name="viewport" content="width=device-width, initial-scale=1.0")
		meta(http-equiv="X-UA-Compatible" content="IE=edge")

	body#bodycollection
		div.header
			div.navprofile
				ul
					li 
						a(href="/contact") Contact
					li
						a(href="/search") Search
					li 
						a(href="/collection") Go Shopping
					li 
						if user
							a(href="/profile") Profile
						else 
							a(href="/login") Login
					li#top1
						a(href="/") Ucci

		p#collection 'Be <strong> Bold' </strong> Collection
		hr.hrcollection
		div.clotheslist
			div.eachitem
				each item in selectiontype
					ul.mainlist
						li.typename <strong> Name: </strong>
							span.thespans #{item.name}
						li.price <strong> Price: </strong>
							span.thespans #{item.price} EUR
						li.color <strong> Color: </strong> 
							span.thespans #{item.color}
						li.url
							- var location = item.url
							img(src=`${location}` style="height:200px; width:300px")
				//- else 
				//- 	p(style="color:pink") no match found
				//- 	form#searchengine(name="form"  method="post" action="/search" autocomplete="off")
				//- 		input#searchbar(name="search" type="text" placeholder="Search..." tabindex="0")


		div.footercollection
				hr#hrcollectiontwo
				ul
					li
						a(href="https://www.facebook.com") Facebook
					li
						a(href="https://www.instagram.com") Instagram
					li
						a(href="https://www.twitter.com") Twitter
					li
						a(href="https://www.pinterest.com") Pinterest 

